{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ]
}